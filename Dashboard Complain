<script>
/*
  Full dashboard (dark mode) — uses your Apps Script endpoint
  JSON sample keys expected: tanggal (dd/MM/yyyy), kasus, invoice, pic_yang_melakukan_kesalahan, weekmonth
*/
const DATA_URL = "https://script.google.com/macros/s/AKfycbyWBWuNZs9m3ixRZ6NUrEtX8pxhtdvPRmh5Yw_70J6GDdikF76QByva9zRB5mzA9plR/exec";

let rawData = [];
let employees = [];
let selectedEmployee = null;
let latestMonthInfo = null;
let pieChart = null;
let barChart = null;

const $ = id => document.getElementById(id);

document.addEventListener('DOMContentLoaded', () => {
  $('reloadBtn').addEventListener('click', reloadData);
  $('refreshBtnSmall').addEventListener('click', reloadData);
  $('employeeInput').addEventListener('input', handleEmployeeInput);
  loadAndRender();
});

async function showLoading(flag){
  $('loading').style.display = flag ? 'flex' : 'none';
}

/* initial load */
async function loadAndRender(){
  showLoading(true);
  try {
    const res = await fetch(DATA_URL, {cache: "no-store"});
    if(!res.ok) throw new Error("Gagal memuat data: " + res.status);
    const json = await res.json();
    rawData = Array.isArray(json) ? json : (json.data || json.rows || []);
    // normalize lower-case keys
    rawData = rawData.map(r => {
      const n = {};
      for(const k in r) n[k.toLowerCase()] = r[k];
      return n;
    });
    buildEmployeeList();
    if (!selectedEmployee && employees.length) {
      selectedEmployee = employees[0];
      $('employeeInput').value = selectedEmployee;
    }
    renderForEmployee(selectedEmployee || (employees[0] || null));
  } catch(e){
    console.error(e);
    alert("Gagal memuat data dari API.");
  } finally {
    showLoading(false);
  }
}

/* reload only data */
async function reloadData(){
  showLoading(true);
  try {
    const res = await fetch(DATA_URL, {cache: "no-store"});
    if(!res.ok) throw new Error("Gagal memuat data: " + res.status);
    const json = await res.json();
    rawData = Array.isArray(json) ? json : (json.data || json.rows || []);
    rawData = rawData.map(r => {
      const n = {};
      for(const k in r) n[k.toLowerCase()] = r[k];
      return n;
    });
    const prev = selectedEmployee;
    buildEmployeeList();
    if(prev && employees.includes(prev)) selectedEmployee = prev;
    else {
      selectedEmployee = employees[0] || null;
      $('employeeInput').value = selectedEmployee || '';
    }
    renderForEmployee(selectedEmployee);
    // small button spin feedback
    $('reloadBtn').animate([{transform:'rotate(0deg)'},{transform:'rotate(360deg)'}],{duration:600});
  } catch(e){
    console.error(e);
    alert("Gagal memuat ulang data.");
  } finally { showLoading(false); }
}

/* build datalist for PIC */
function buildEmployeeList(){
  const key = 'pic_yang_melakukan_kesalahan';
  const set = new Set();
  rawData.forEach(r=>{
    const name = (r[key] || "").toString().trim();
    if(name) set.add(name);
  });
  employees = Array.from(set).sort((a,b)=>a.localeCompare(b));
  const dl = $('employeeList');
  dl.innerHTML = "";
  employees.forEach(n=>{
    const o = document.createElement('option'); o.value = n; dl.appendChild(o);
  });
}

/* handle typing/selecting PIC */
function handleEmployeeInput(e){
  const v = e.target.value.trim();
  if(employees.includes(v)){
    selectedEmployee = v;
    renderForEmployee(v);
  }
}

/* main render */
function renderForEmployee(name){
  if(!name){
    $('profileName').textContent = '—';
    $('avatar').textContent = 'NA';
    renderPie([],[]);
    renderBar([]);
    $('uniqueInvoices').textContent = '0';
    $('totalThisMonth').textContent = '0';
    $('latestMonthLabel').textContent = '—';
    return;
  }

  $('profileName').textContent = name;
  $('profileSub').textContent = 'PIC (kolom F)';
  setAvatar(name);

  const dateKey = 'tanggal';
  const invoiceKey = 'invoice';
  const kasusKey = 'kasus';
  const picKey = 'pic_yang_melakukan_kesalahan';

  // parse dates across data and find latest
  const valid = rawData.map(r=>({r,d:parseDateStr(r[dateKey])})).filter(x=>x.d);
  if(valid.length === 0){
    $('latestMonthLabel').textContent = 'Tidak ada data tanggal';
    renderPie([],[]); renderBar([]); return;
  }
  valid.sort((a,b)=>b.d - a.d);
  const latestDate = valid[0].d;
  const latestMonth = latestDate.getMonth();
  const latestYear = latestDate.getFullYear();
  latestMonthInfo = {month: latestMonth, year: latestYear};
  $('latestMonthLabel').textContent = `${pad(latestMonth+1)}/${latestYear}`;

  // rows for this PIC
  const rowsForEmployee = rawData.filter(r => ((r[picKey]||"").toString().trim() === name));
  // rows in latest month
  const rowsThisMonth = rowsForEmployee.filter(r => {
    const d = parseDateStr(r[dateKey]);
    return d && d.getMonth() === latestMonth && d.getFullYear() === latestYear;
  });

  // unique invoices
  const uniqueInvoices = new Set(rowsThisMonth.map(r=>((r[invoiceKey]||"")+"").trim()).filter(Boolean));
  $('uniqueInvoices').textContent = uniqueInvoices.size;
  $('totalThisMonth').textContent = rowsThisMonth.length;

  // alert if > 2
  const alertContainer = $('alertContainer'); alertContainer.innerHTML = "";
  if(rowsThisMonth.length > 2){
    const el = document.createElement('div'); el.className = 'alert';
    el.innerHTML = `<i class="fas fa-exclamation-triangle"></i><div style="margin-left:6px"><strong>Perhatian:</strong><div>Jumlah komplain bulan ini ${rowsThisMonth.length} (lebih dari 2).</div></div>`;
    alertContainer.appendChild(el);
  }

  // pie: group by kasus, count unique invoice per kasus
  const map = new Map();
  rowsThisMonth.forEach(r=>{
    const k = ((r[kasusKey]||"")+"").trim() || "(Tanpa Kasus)";
    const inv = ((r[invoiceKey]||"")+"").trim();
    if(!map.has(k)) map.set(k,new Set());
    if(inv) map.get(k).add(inv);
  });
  const pieLabels = Array.from(map.keys());
  const pieData = pieLabels.map(k => map.get(k).size);

  renderPie(pieLabels, pieData);

  // bar: last 3 months previous to latestDate
  const history = getHistory3Months(rowsForEmployee, latestMonthInfo);
  renderBar(history);
}

/* render functions for charts with multicolor palette */
function renderPie(labels, data){
  if(pieChart) pieChart.destroy();
  const ctx = $('pieChart').getContext('2d');
  const colors = genBrightPalette(labels.length);
  pieChart = new Chart(ctx, {
    type: 'pie',
    data: { labels, datasets: [{ data, backgroundColor: colors, borderColor: '#0b1220', borderWidth: 2 }] },
    options: { maintainAspectRatio:false, plugins:{legend:{display:false}} }
  });

  // legend
  const legend = $('pieLegend'); legend.innerHTML = "";
  labels.forEach((lbl,i)=>{
    const color = colors[i];
    const val = data[i]||0;
    const item = document.createElement('div'); item.className='legend-item';
    item.innerHTML = `<div style="display:flex;gap:10px;align-items:center"><span style="width:12px;height:12px;background:${color};display:inline-block;border-radius:3px"></span><strong style="color:#eaf2ff">${lbl}</strong></div><div style="font-weight:700;color:${color}">${val}</div>`;
    legend.appendChild(item);
  });
}

function renderBar(history){
  if(barChart) barChart.destroy();
  const ctx = $('barChart').getContext('2d');
  const colors = genBrightPalette(history.length);
  barChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: history.map(h=>h.label),
      datasets: [{ label:'Komplain', data: history.map(h=>h.value), backgroundColor: colors }]
    },
    options: {
      maintainAspectRatio:false,
      plugins:{ legend:{ display:false } },
      scales:{ y:{ beginAtZero:true, ticks:{ precision:0 } } }
    }
  });
}

/* palettes - generate lively colors */
function genBrightPalette(n){
  const base = ['#FF6B6B','#FF8A5B','#FFD166','#4ECDC4','#06D6A0','#4CC9F0','#6A4C93','#A34DD6','#FF4D8F','#FFD54A'];
  return Array.from({length:n}, (_,i) => base[i % base.length]);
}

/* utils */
function pad(n){ return n < 10 ? '0'+n : n; }
function parseDateStr(s){
  if(!s) return null;
  s = String(s).trim();
  const parts = s.split(/[/\-.]/).map(x=>x.trim());
  if(parts.length<3) return null;
  const dd = parseInt(parts[0],10), mm = parseInt(parts[1],10), yyyy = parseInt(parts[2],10);
  if(isNaN(dd)||isNaN(mm)||isNaN(yyyy)) return null;
  return new Date(yyyy, mm-1, dd);
}
function setAvatar(name){
  const el = $('avatar');
  const parts = (name||'').split(/\s+/).filter(Boolean);
  const initials = (parts[0]?.[0] || '') + (parts[parts.length-1]?.[0] || '');
  el.textContent = initials.toUpperCase() || 'NA';
}

/* history last 3 months (previous months relative to latestMonthInfo) */
function getHistory3Months(list, info){
  const out = [];
  for(let i=1;i<=3;i++){
    let m = info.month - i;
    let y = info.year;
    if(m < 0) { m += 12; y -= 1; }
    const label = `${pad(m+1)}/${y}`;
    const count = list.filter(r=>{
      const d = parseDateStr(r['tanggal']);
      return d && d.getMonth() === m && d.getFullYear() === y;
    }).length;
    out.push({ label, value: count });
  }
  return out.reverse(); // oldest first
}
</script>
</body>
</html>
